<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.AboutPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="display" Text="0" FontSize="Large" HorizontalOptions="End" VerticalOptions="EndAndExpand" Margin="10" />
            <Grid BackgroundColor="#333333">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Botones -->
                <Button Grid.Row="0" Grid.Column="0" Text="7" Clicked="OnNumberButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
                <Button Grid.Row="0" Grid.Column="1" Text="8" Clicked="OnNumberButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
                <Button Grid.Row="0" Grid.Column="2" Text="9" Clicked="OnNumberButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
                <Button Grid.Row="0" Grid.Column="3" Text="+" Clicked="OnOperatorButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />

                <Button Grid.Row="1" Grid.Column="0" Text="4" Clicked="OnNumberButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
                <Button Grid.Row="1" Grid.Column="1" Text="5" Clicked="OnNumberButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
                <Button Grid.Row="1" Grid.Column="2" Text="6" Clicked="OnNumberButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
                <Button Grid.Row="1" Grid.Column="3" Text="-" Clicked="OnOperatorButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />

                <Button Grid.Row="2" Grid.Column="0" Text="1" Clicked="OnNumberButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
                <Button Grid.Row="2" Grid.Column="1" Text="2" Clicked="OnNumberButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
                <Button Grid.Row="2" Grid.Column="2" Text="3" Clicked="OnNumberButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
                <Button Grid.Row="2" Grid.Column="3" Text="*" Clicked="OnOperatorButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />

                <Button Grid.Row="3" Grid.Column="0" Text="0" Clicked="OnNumberButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
                <Button Grid.Row="3" Grid.Column="1" Text="C" Clicked="OnClearButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
                <Button Grid.Row="3" Grid.Column="2" Text="=" Clicked="OnEqualButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
                <Button Grid.Row="3" Grid.Column="3" Text="/" Clicked="OnOperatorButtonClicked" FontSize="Large" WidthRequest="120" HeightRequest="120" CornerRadius="60" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
